<?xml version="1.0" encoding="utf-8"?>

<menu xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Touch pointer - LEFTMOST button (first position) -->
    <item
        android:id="@+id/session_touch_pointer"
        android:icon="@drawable/icon_menu_touch_pointer"
        android:showAsAction="always"
        app:showAsAction="always"
        android:title="@string/menu_touch_pointer" />
    <!-- Zoom to 310% - second position -->
    <item
        android:id="@+id/session_zoom_310"
        android:icon="@drawable/icon_menu_zoom_300"
        android:showAsAction="always"
        app:showAsAction="always"
        android:title="3.1x" />
    <!-- Zoom to 400% - third position -->
    <item
        android:id="@+id/session_zoom_400"
        android:icon="@drawable/icon_menu_zoom_400"
        android:showAsAction="always"
        app:showAsAction="always"
        android:title="4x" />
    <!-- ALT key toggle - text only (no icon) -->
    <item
        android:id="@+id/session_alt_key"
        android:showAsAction="always|withText"
        app:showAsAction="always|withText"
        android:title="ALT" />
    <!-- System keyboard - right side -->
    <item
        android:id="@+id/session_sys_keyboard"
        android:icon="@drawable/icon_menu_sys_keyboard"
        android:showAsAction="always"
        app:showAsAction="always"
        android:title="@string/menu_sys_keyboard" />
    <!-- Extended keyboard - collapse to overflow menu -->
    <item
        android:id="@+id/session_ext_keyboard"
        android:icon="@drawable/icon_menu_ext_keyboard"
        android:showAsAction="never"
        app:showAsAction="never"
        android:title="@string/menu_ext_keyboard" />
    <!-- Disconnect - collapse to overflow menu -->
    <item
        android:id="@+id/session_disconnect"
        android:icon="@drawable/icon_menu_disconnect"
        android:showAsAction="never"
        app:showAsAction="never"
        android:title="@string/menu_disconnect" />
</menu>
