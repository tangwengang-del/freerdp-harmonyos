<?xml version="1.0" encoding="utf-8"?>
<!-- 极简触摸指针 - 右键激活状态 (150×140, 中央60×60, 箭头右移20px下移25px) -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="150dp"
    android:height="140dp"
    android:viewportWidth="150"
    android:viewportHeight="140">
    
    <!-- 左键（40×60，无弧度，直角矩形，70%不透明，无边框） -->
    <path
        android:fillColor="#B3CCCCCC"
        android:pathData="M10,80 L10,140 L50,140 L50,80 Z"/>
    
    <!-- 中央圆（70%不透明，无边框） -->
    <path
        android:fillColor="#B3CCCCCC"
        android:pathData="M 80,110 m -30,0 a 30,30 0 1,0 60,0 a 30,30 0 1,0 -60,0"/>
    
    <!-- 右键（40×60，无弧度，红色激活状态，无边框） -->
    <path
        android:fillColor="#FFFF0000"
        android:pathData="M110,80 L110,140 L150,140 L150,80 Z"/>
    
    <!-- Windows经典箭头 - 黑色边框（右移20px，下移25px） -->
    <path
        android:strokeColor="#FF000000"
        android:strokeWidth="2"
        android:fillColor="#00000000"
        android:pathData="M20,25 L20,50 L24,46 L28,55 L31,54 L27,45 L35,45 Z"/>
    
    <!-- Windows经典箭头 - 白色填充（右移20px，下移25px） -->
    <path
        android:fillColor="#FFFFFFFF"
        android:pathData="M20,25 L20,50 L24,46 L28,55 L31,54 L27,45 L35,45 Z"/>
    
    <!-- 黑色"十"字标记在箭头尖端（真正的点击点） -->
    <path
        android:strokeColor="#FF000000"
        android:strokeWidth="2"
        android:pathData="M15,25 L25,25 M20,20 L20,30"/>
</vector>
